<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="real_estate_property_form_view" model="ir.ui.view">
        <field name="name">real.estate.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Real Estate">

                <header>
                    <button name="action_open_sold_wizard" invisible="state == 'sold'" string="Sold"
                        type="object"
                        class="btn-primary" />
                    <button name="action_offer_received" string="Offer Received" type="object" />
                    <button name="action_accept_offer" string="Accept Offer" type="object" />
                    <button name="action_cancel" invisible="state != 'sold'" string="Cancel"
                        type="object" />


                    <field name="state" widget="statusbar"
                        statusbar_visible="new,offer_received,offer_accepted,sold,canceled" />
                </header>

                <sheet string="Real Estate Details">
                    <group>
                        <field name="image" widget="image" class="oe_avatar"
                            options="{'preview_image': 'image', 'convert_to_webp': True}" />

                        <group>
                            <field name="name" />
                            <field name="location" />
                            <field name="postcode" />
                            <field name="state" readonly="1" />

                        </group>


                        <group>
                            <field name="expected_price" widget="monetary" />
                            <field name="selling_price" widget="monetary" />

                            <field name="date_availability" widget="ai_datetime" />

                        </group>

                        <group>

                            <field name="bedrooms" />
                            <field name="living_area" />
                            <field name="facades" />
                            <field name="garden" />
                            <field name="property_type_id" widget="many2one" />
                            <field name="active" widget="boolean" />

                        </group>


                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description" />
                        </page>
                        <page string="Owner Information">

                            <group>
                                <field name="owner" label="Sold To" widget="many2one"
                                    options="{'no_create': True}"
                                    readonly="1" />
                            </group>

                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>
</odoo>