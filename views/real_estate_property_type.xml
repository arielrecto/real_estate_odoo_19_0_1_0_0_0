<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="action_real_estate_property_type" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">real.estate.property.type</field>
        <field name="view_mode">list,form,kanban</field>
    </record>


    <record id="real_estate_property_type_list_view" model="ir.ui.view">
        <field name="name">real.estate.property.type.tree</field>
        <field name="model">real.estate.property.type</field>
        <field name="arch" type="xml">
            <list string="Property Types">
                <field name="name" />
                <field name="description" />
            </list>
        </field>
    </record>


    <record id="real_estate_property_type_form_view" model="ir.ui.view">
        <field name="name">real.estate.property.type.form</field>
        <field name="model">real.estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="real_estate_property_type_kanban_view" model="ir.ui.view">
        <field name="name">real.estate.property.type.kanban</field>
        <field name="model">real.estate.property.type</field>
        <field name="arch" type="xml">
            <kanban string="Property Types">
                <field name="name" />
                <templates>
                    <t t-name="card">

                        <strong>
                            <field name="name" />
                        </strong>
                        <strong>
                            <field name="description" />
                        </strong>

                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>